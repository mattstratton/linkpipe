{
  "name": "@linkpipe/backend",
  "version": "1.0.0",
  "description": "LinkPipe Backend API - AWS Lambda Functions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:redirect": "tsx watch src/redirect-server.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "deploy": "npm run build && serverless deploy",
    "deploy:aws": "aws cloudformation deploy --template-file infrastructure/cloudformation.yml --stack-name linkpipe --capabilities CAPABILITY_IAM",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@linkpipe/shared": "*",
    "@prisma/client": "^6.13.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "prisma": "^6.13.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.8",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "tsx": "^4.1.0",
    "typescript": "^5.2.2"
  }
}
