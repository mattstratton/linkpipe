{
  "name": "@linkpipe/backend",
  "version": "1.0.0",
  "description": "LinkPipe Unified Server - API, Frontend, and Redirect Service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "build:frontend": "cd ../frontend && npm run build",
    "build:all": "npm run build:frontend && npm run build",
    "clean": "rm -rf dist public",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@linkpipe/shared": "*",
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-http": "^0.3.0",
    "pg": "^8.11.0",
    "prisma": "^6.13.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.8",
    "@types/node": "^20.9.0",
    "@types/passport": "^1.0.16",
    "@types/passport-http": "^0.3.10",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "tsx": "^4.1.0",
    "typescript": "^5.2.2"
  }
}
