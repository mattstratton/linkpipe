{
  "name": "linkpipe",
  "version": "1.0.0",
  "description": "URL Shortener with UTM Manager - AWS Low-Cost Architecture",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "node scripts/find-ports.js && docker-compose up --build -d",
    "dev:auto": "node scripts/setup.js && bash scripts/start-dev.sh",
    "dev:win": "node scripts/setup.js && scripts/start-dev.bat",
    "dev:force": "docker-compose up --build",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:ports": "node scripts/find-ports.js",
    "dev:clean": "docker-compose down -v && docker system prune -f",
    "setup": "node scripts/setup.js",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "clean": "npm run clean --workspace=frontend && npm run clean --workspace=backend",
    "deploy:aws": "npm run deploy --workspace=backend",
    "deploy:vercel": "npm run deploy --workspace=frontend"
  },
  "keywords": ["url-shortener", "utm", "aws", "serverless", "react"],
  "author": "Matt Stratton",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "concurrently": "^8.0.0"
  }
} 