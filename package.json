{
  "name": "linkpipe",
  "version": "1.0.0",
  "description": "URL Shortener with UTM Manager - Unified Express.js Architecture",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:build": "docker-compose up --build -d",
    "dev:logs": "docker-compose logs -f",
    "dev:clean": "docker-compose down -v && docker system prune -f",
    "build": "npm run build:all --workspace=backend",
    "clean": "npm run clean --workspace=backend"
  },
  "keywords": ["url-shortener", "utm", "express", "react", "postgresql"],
  "author": "Matt Stratton",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "concurrently": "^8.0.0"
  }
} 